// views/profile.ejs
<% layout('layout') -%>

<div style="background: white; padding: 30px; border-radius: 10px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
  <h2 style="margin-bottom: 30px; color: #2c3e50;">ðŸ‘¤ User Profile</h2>
  
  <div style="display: grid; grid-template-columns: 1fr 2fr; gap: 30px;">
    <div>
      <div style="text-align: center; padding: 20px; background: #f8f9fa; border-radius: 8px;">
        <div style="width: 100px; height: 100px; background: #185a9d; border-radius: 50%; margin: 0 auto 20px; display: flex; align-items: center; justify-content: center; color: white; font-size: 2em;">
          <%= user.name.charAt(0).toUpperCase() %>
        </div>
        <h3 style="color: #2c3e50;"><%= user.name %></h3>
        <p style="color: #666; text-transform: capitalize;"><%= user.role %></p>
      </div>
    </div>
    
    <div>
      <form style="display: flex; flex-direction: column; gap: 20px;">
        <div>
          <label style="display: block; margin-bottom: 5px; font-weight: bold;">Name</label>
          <input type="text" value="<%= user.name %>" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px;" readonly>
        </div>
        
        <div>
          <label style="display: block; margin-bottom: 5px; font-weight: bold;">Email</label>
          <input type="email" value="<%= user.email %>" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px;" readonly>
        </div>
        
        <div>
          <label style="display: block; margin-bottom: 5px; font-weight: bold;">Role</label>
          <input type="text" value="<%= user.role %>" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; text-transform: capitalize;" readonly>
        </div>
        
        <div>
          <label style="display: block; margin-bottom: 5px; font-weight: bold;">Member Since</label>
          <input type="text" value="<%= new Date(user.createdAt).toLocaleDateString() %>" style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px;" readonly>
        </div>
        
        <button type="button" style="background: #185a9d; color: white; padding: 12px 24px; border: none; border-radius: 4px; cursor: pointer; font-size: 16px;">
          Edit Profile
        </button>
      </form>
    </div>
  </div>
</div>